#!/bin/bash

# Usage: ./list-s3-objects.sh <bucket-name> [prefix]

BUCKET_NAME="$1"
PREFIX="$2"

if [ -z "$BUCKET_NAME" ]; then
  echo "Usage: $0 <bucket-name> [prefix]"
  exit 1
fi

echo "üì¶ Listing objects in bucket: $BUCKET_NAME"
if [ -n "$PREFIX" ]; then
  echo "üîç With prefix: $PREFIX"
fi

aws s3api list-objects-v2 \
  --bucket "$BUCKET_NAME" \
  --prefix "$PREFIX" \
  --query "Contents[].{Key: Key, Size: Size, LastModified: LastModified}" \
  --output table \
  --region ap-southeast-1

# Check success
if [ $? -eq 0 ]; then
  echo "‚úÖ Object list retrieved successfully."
else
  echo "‚ùå Failed to list objects in bucket '$BUCKET_NAME'."
fi
